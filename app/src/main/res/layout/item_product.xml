<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_card_catalog_width"
    android:layout_height="@dimen/item_card_catalog_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_normal">

    <ImageView
        android:id="@+id/iv_product_preview"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/light"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1753,45    р/шт"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_normal"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        tools:text="Ламинат Artens Тангай 33 класс feeffg "/>

</LinearLayout>